# Benchmark Environment Configuration
# This file is templated by Ansible - do not edit manually

# Repository paths
export NIMBUS_ETH1_BENCHMARKS_REPO="{{ nimbus_eth1_benchmarks_repo }}"
export NIMBUS_ETH1_REPO="{{ nimbus_eth1_repo }}"
export NIMBUS_ETH1_TEMPLATE_DB="{{ nimbus_eth1_template_db }}"
export NIMBUS_ETH1_DB_DIR="${NIMBUS_ETH1_REPO}/data/shared_{{ nimbus_eth1_network }}_0"

# File names
export BENCHMARK_FILE_NAME='blocks-import-benchmark.csv'

# Working directories
export HOST_BENCHMARKS_DIR="{{ nimbus_eth1_host_benchmarks_dir }}"

# ERA directories
export ERA1_DIR="{{ nimbus_eth1_era1_dir }}"
export ERA_DIR="{{ nimbus_eth1_era_dir }}"

# Repository URLs
export NIMBUS_ETH1_REPO_URL="{{ nimbus_eth1_repo_url }}"
export BENCHMARKS_REPO_URL="{{ nimbus_eth1_benchmarks_repo_url }}"

# Git configuration
export BRANCH="{{ nimbus_eth1_repo_branch }}"

# Benchmark configuration
export BENCHMARKING_TYPE="${BENCHMARKING_TYPE:="{{ nimbus_eth1_benchmark_type }}"}"
export FORCE_RUN="${FORCE_RUN:="false"}"

# Service configuration
export CURRENT_BENCHMARK_TYPE_DIR="${NIMBUS_ETH1_BENCHMARKS_REPO}/${BENCHMARKING_TYPE}-benchmark"
export SYSTEMD_INVOCATION_ID=$(systemctl show --value -p InvocationID {{ nimbus_eth1_service_name }}.service)
export CURRENT_BENCHMARK_RUN_DIR="${HOST_BENCHMARKS_DIR}/${BENCHMARKING_TYPE}/${SYSTEMD_INVOCATION_ID}"
export DEBUG_CSV_PATH="${CURRENT_BENCHMARK_RUN_DIR}/${BENCHMARK_FILE_NAME}"

# Maximum blocks for short benchmark
export MAX_BLOCKS_TO_IMPORT={{ nimbus_eth1_max_blocks_to_import }}